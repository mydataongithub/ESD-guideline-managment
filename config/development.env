# Development Configuration
# Copy this file to .env for local development overrides

# Server Configuration
DEBUG=true
HOST=127.0.0.1
PORT=8000
RELOAD=true

# Paths (relative to project root)
CONFIG_PATH=config
GUIDELINES_REPO_PATH=guidelines_repo
TEMPLATES_PATH=app/templates
STATIC_PATH=app/static

# Git Configuration
GIT_AUTO_INIT=true
GIT_AUTO_COMMIT=true
DEFAULT_COMMIT_MESSAGE="Auto-generated guideline update"

# Template Configuration
MASTER_TEMPLATE_NAME=master_template.md
DATE_FORMAT=%Y-%m-%d %H:%M:%S

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=esd_guidelines.log

# Security (for production)
# SECRET_KEY=your-secret-key-here
# API_KEY_REQUIRED=false

# Database (for future expansion)
# DATABASE_URL=sqlite:///./guidelines.db

# External Integration
# MCP_ENDPOINT=http://localhost:9000/api
# WEBHOOK_URL=http://localhost:9000/webhook
# NOTIFICATION_EMAIL=admin@company.com

# Performance
MAX_FILE_SIZE_MB=10
CACHE_TTL_SECONDS=300
MAX_HISTORY_VERSIONS=50

# UI Configuration
ENABLE_DOWNLOAD=true
ENABLE_PRINT=true  
ENABLE_RAW_VIEW=true
ENABLE_HISTORY=true
